<apex:page showheader="false">

<head>
<title>{!$Organization.Name} - Contact Us</title>

<META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8">
    <style type="text/css">
    
        table {
            margin-left:20px;
            font: 12px Verdana, Arial, sans-serif;
        }
        
        table caption {
            text-align:left;
        }
        
        body {
            background-color:#fff;
            border:0;margin:0;
        }
        
        h1 {
            font: 22px verdana, arial, sans-serif normal;
            margin-bottom:5px;
        }
        
        
        
        form input {
            font: 12px Verdana, Arial, sans-serif;
            width:225px;
            height:16px;
            _height:20px;
            color: #000;
            border:1px solid #A7A6AA;
            float:left;
            padding:3px 1px 2px 1px;
            _padding:0;
            margin:0;
        }
        
        form label {
            font: 12px Verdana, Arial, sans-serif;
        }
        
        form select {
            font: 12px Verdana, Arial, sans-serif;
            width:225px;
            height:20px;
            _height:24px;
            color: #000;
            border:1px solid #A7A6AA;
            float:right;
            padding:2px 1px 3px 0px;
            margin:0 4px 0 0;   
        }
        
        .multiselectpl {
            height:75px;
        }
        
        form #submit {
            font: 12px Verdana, Arial, sans-serif;
            padding-bottom:5px;
            padding-left:0;
            padding-right:0;
            padding-top:1px;
            height:20px;
            width:75px;
            float:left;
        }
        
        form textarea {
            font: 12px Verdana, Arial, sans-serif;
            width:200px;
            color: #000;
            padding:3px 1px 2px 1px;
            border:1px solid #A7A6AA;
            height:50px;
        }
    
    </style>

</head>

<body>



    <table border="0" align="center" style="margin-left:auto;margin-right:auto;">
        <tbody>
            <tr>
                <td colspan="3"><img src="{!$Resource.Banner}"/></td>
            </tr>
            <tr>
                <td align="left" valign="top">
                    <!-- if the company's web site has content in its left column, paste that content here -->
            
                    <!-- make sure the left column content ends here -->
                </td>
                <td valign="top">
                    <!-- if the company's web site has content in its middle column above the Web2Lead form, paste that content here -->
                    
                    <h1>Thank you</h1>
                    
                    Your form has been submitted successfully. We will contact you shortly.
    
                    <!-- make sure the middle column content ends here -->
    
                    <!-- END WEB-2-LEAD FORM -->
                </td>
                <td align="right" valign="top">
                    <!-- if the company's web site has content in its right column, paste that content here -->
    
                    <!-- make sure the right column content ends here -->
                </td>
            </tr>
            <tr>
                <td colspan="3" align="center">
                    <!-- paste the company's footer starting here -->
                    
                    <hr style="color:#999;height:1px;background-color:#999;border:0;margin:15px 0 10px 0;padding:0;" />
                    
                    &copy; 2010 {!$Organization.Name}
                    
                    <!-- make sure the footer content ends here -->
                </td>
            </tr>
        </tbody>
    </table>
</body>



</apex:page>